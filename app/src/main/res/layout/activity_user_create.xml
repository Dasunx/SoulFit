<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_create">

    <TextView


        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:shadowDy="2"
        android:text="@string/Topic"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <EditText
        android:id="@+id/Birthday"
        android:layout_width="327dp"
        android:layout_height="43dp"
        android:layout_marginTop="168dp"
        android:autofillHints=""
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="25dp"

        android:ems="10"

        android:hint="@string/birthday"
        android:inputType="textPersonName"
        android:textColorHint="#424949"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/RGender"
        android:layout_width="68dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:text="@string/gender"
        android:textSize="15sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366" />

    <RadioButton
        android:id="@+id/male"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginStart="52dp"
        android:text="@string/male"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RGender"
        app:layout_constraintTop_toBottomOf="@+id/Birthday"
        app:layout_constraintVertical_bias="0.094" />

    <RadioButton
        android:id="@+id/female"
        android:layout_width="103dp"
        android:layout_height="25dp"
        android:text="@string/female"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toEndOf="@+id/male"
        app:layout_constraintTop_toBottomOf="@+id/Birthday"
        app:layout_constraintVertical_bias="0.096" />

    <EditText
        android:id="@+id/height"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"

        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="323dp"

        android:drawableStart="@drawable/ic_accessibility_black_24dp"
        android:drawablePadding="25dp"

        android:hint="@string/height"

        android:textColorHint="#424949"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479"
        android:autofillHints="" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_fitness_center_black_24dp"
        android:drawablePadding="25dp"
        android:ems="10"
        android:hint="@string/weight"
        android:inputType="textPersonName"
        android:textColorHint="#424949"
        android:textSize="15sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height"
        app:layout_constraintVertical_bias="0.073"
        android:autofillHints="" />

    <TextView
        android:id="@+id/textViewR3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="492dp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:text="@string/foot_massage"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        app:layout_constraintVertical_bias="0.148"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:background="#50c878"


        android:text="@string/submit"


        android:textColor="#c85064"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />




</android.support.constraint.ConstraintLayout>

